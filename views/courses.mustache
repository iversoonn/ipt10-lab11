<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="container mt-5">
        <h1 class="mb-4">Courses</h1>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Course Name</th>
                    <th>Course Code</th>
                    <th>Enrollees</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{# items }}
                <tr>
                    <td>{{ id }}</td>
                    <td>{{ course_name }}</td>
                    <td>{{ course_code }}</td>
                    <td>{{ enrolee_count }}</td>
                    <td>
                        <a href="/courses/{{ course_code }}" class="btn btn-info btn-sm">View Students</a>
                        <a href="/exportPDF/{{ course_code }}" class="btn btn-secondary btn-sm">Export PDF</a>
                    </td>
                </tr>
                {{/ items }}
                {{^ items }}
                <tr>
                    <td colspan="5" class="text-center">No courses available.</td>
                </tr>
                {{/ items }}
            </tbody>
        </table>

        <div class="mt-4">
            <a href="/enrollment-form" class="btn btn-primary">Enroll a Student</a>
        </div>

        <hr />
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" href="/courses">List of courses</a></li>
                <li class="page-item"><a class="page-link" href="/students">List of students</a></li>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>